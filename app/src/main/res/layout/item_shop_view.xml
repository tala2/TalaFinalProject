<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/itmTvTittle"
        android:layout_width="246dp"
        android:layout_height="58dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/aladin"
        android:text="Add Shop"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textColor="?android:attr/panelColorForeground"
        android:textSize="36sp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/itmbtnDelete"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="121dp"
        android:layout_marginBottom="18dp"
        app:layout_constraintBottom_toTopOf="@+id/itmbtnAdd"
        app:layout_constraintEnd_toEndOf="@+id/itmbtnAdd"
        app:layout_constraintStart_toStartOf="@+id/itmbtnAdd"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_menu_delete" />

    <ImageView
        android:id="@+id/itmbtnAdd"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="11dp"
        android:layout_marginEnd="6dp"
        android:layout_marginBottom="19dp"
        app:layout_constraintBottom_toTopOf="@+id/itmbtnSort"
        app:layout_constraintEnd_toEndOf="@+id/itmbtnSort"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/itmbtnDelete"
        app:srcCompat="@android:drawable/ic_menu_edit" />

    <ImageView
        android:id="@+id/itmbtnSort"
        android:layout_width="46dp"
        android:layout_height="0dp"
        android:layout_marginStart="11dp"
        android:layout_marginBottom="438dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/itmbtnAdd"
        app:srcCompat="@android:drawable/ic_menu_sort_alphabetically" />
</androidx.constraintlayout.widget.ConstraintLayout>