<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbarThumbVertical="@drawable/ic_launcher_background"
    android:scrollbarTrackHorizontal="@drawable/ic_launcher_background"
    android:scrollbarTrackVertical="@drawable/ic_launcher_foreground"
    tools:context=".AddShopActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/TvTitle"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:fontFamily="@font/adamina"
            android:text="My Shops"
            android:textAlignment="center"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:textSize="36sp"
            android:textStyle="bold|italic"
            android:typeface="monospace" />

        <com.google.android.gms.maps.MapView
            android:id="@+id/mapShops"
            android:layout_width="match_parent"
            android:layout_height="201dp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ListView
            android:id="@+id/lisShops"
            android:layout_width="match_parent"
            android:layout_height="221dp">

        </ListView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/imgbtnAdd"
                android:layout_width="0dp"
                android:layout_height="88dp"
                android:layout_weight="1"
                android:src="@mipmap/ic_launcher_foreground" />

            <Space
                android:layout_width="173dp"
                android:layout_height="56dp"
                android:layout_weight="1" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>